model Meeting {
  id                       Int                     @id @default(autoincrement())
  title                    String
  description              String
  startDate                DateTime
  endDate                  DateTime
  isRecurring              Boolean?                @default(false)
  recurrence               Recurrence?             @default(NONE)
  location                 String
  place                    String?
