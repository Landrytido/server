{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "i18n/**/*",
        "outDir": "./dist/src/i18n"
      },
      {
        "include": "templates/**/*",
        "outDir": "./dist/src/templates"
      },
      {
        "include": "src/**/*",
        "outDir": "./dist/src/"
      }
    ],
    "watchAssets": true
  }
}
